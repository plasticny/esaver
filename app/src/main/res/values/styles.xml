<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainNavTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>
<!--  search mark dialog  -->
    <style name="SearchMarkCategoryStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SearchMarkDialogTagSpinnerStyle">
        <item name="android:textColor">@color/white</item>
    </style>
<!--  search fragment  -->
    <style name="SearchFragmentToolBarItemStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/font_awesome</item>
        <item name="android:textSize">20sp</item>
    </style>
<!--  icon button  -->
    <style name="IconButtonCommonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
</resources>