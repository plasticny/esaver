<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/search_book_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!--  some search_book.xml will be added here  -->

            </GridLayout>

            <Button
                android:id="@+id/load_more_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/darkgrey"
                android:layout_marginHorizontal="8dp"
                android:text="@string/load_more"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/no_more_textView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/there_is_no_more"
                android:textColor="@color/grey"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/prev_search_mark_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/darkgrey"
            android:fontFamily="@font/font_awesome"
            android:text="@string/fa_caret_left"
            android:textColor="@color/grey"
            android:textSize="24sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/search_mark_name_container"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/darkgrey"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/search_mark_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/next_search_mark_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/darkgrey"
            android:fontFamily="@font/font_awesome"
            android:text="@string/fa_caret_right"
            android:textColor="@color/grey"
            android:textSize="24sp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/search_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>