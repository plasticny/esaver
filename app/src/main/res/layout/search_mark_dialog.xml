<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgrey"
    android:orientation="vertical"
    android:padding="16dp">

<!--  buttons  -->

    <TextView
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/font_awesome"
        android:text="@string/fa_floppy_disk"/>

<!--  name  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名字"
        android:textSize="16sp"
        android:textColor="@color/grey"/>

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:backgroundTint="@color/grey"
        android:textColor="@color/white"/>

<!--  category  -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:text="@string/category"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:columnCount="2">

        <Button
            android:id="@+id/cat_doujinshi"
            style="@style/SearchMarkCategoryStyle"
            android:text="@string/doujinshi" />

        <Button
            android:id="@+id/cat_manga"
            style="@style/SearchMarkCategoryStyle"
            android:text="@string/manga"/>

        <Button
            android:id="@+id/cat_artist_cg"
            style="@style/SearchMarkCategoryStyle"
            android:text="@string/artist_cg"/>

    </GridLayout>

<!--  tags  -->

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="標籤"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/add_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/font_awesome"
            android:text="@string/fa_plus"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/tag_scrollView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/darkgrey">

        <LinearLayout
            android:id="@+id/tag_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    some tag item will be added here    -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>